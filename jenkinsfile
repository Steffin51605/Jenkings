    agent any 
    stages {
        stage('Build') { 
            steps {
                echo "Building the application"
            }
        }
        stage('Test') { 
            steps {
                echo "Testing the Application"
            }
        }
        stage('Deploy') { 
            steps {
                echo "Application was Deployed Sucessfully"
            }
        }
    }
}
